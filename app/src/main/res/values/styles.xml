<resources>
    <style name="Text">
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextTitle" parent="Text">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextSubtitle" parent="Text">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextTitleShade" parent="TextTitle">
        <item name="android:textSize">@dimen/smartspace_title_size_shade</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">@dimen/text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/text_horizontal_padding</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">10.0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSubtitleShade" parent="TextSubtitle">
        <item name="android:textSize">@dimen/smartspace_text_size_shade</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">@dimen/text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/text_horizontal_padding</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">9.0</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextTitleShade.GoogleSans" parent="TextTitleShade">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="TextSubtitleShade.GoogleSans" parent="TextSubtitleShade">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="TextTitleOxygen" parent="TextTitle">
        <item name="android:maxLines">2</item>

        <item name="android:textSize">@dimen/smartspace_title_size_oxygen</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">@dimen/text_horizontal_padding_oxygen</item>
        <item name="android:paddingRight">@dimen/text_horizontal_padding_oxygen</item>

        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDy">5.25</item>
        <item name="android:shadowRadius">6</item>

        <item name="android:gravity">bottom</item>
    </style>

    <style name="TextSubtitleOxygen" parent="TextSubtitle">
        <item name="android:textSize">@dimen/smartspace_text_size_oxygen</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">@dimen/text_horizontal_padding_oxygen</item>
        <item name="android:paddingRight">@dimen/text_horizontal_padding_oxygen</item>

        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDy">5.25</item>
        <item name="android:shadowRadius">6</item>

        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextTitleOxygen.GoogleSans" parent="TextTitleOxygen">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="TextSubtitleOxygen.GoogleSans" parent="TextSubtitleOxygen">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:actionBarTheme">@style/SettingsTheme.ActionBar</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsTheme.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
    </style>

</resources>
